<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abhishek Calculator"
        android:textStyle="bold"
        android:background="#FF03DAC5"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.171" />

    <EditText
        android:id="@+id/Input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="0"
        android:gravity="center"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.09" />

    <Button
        android:id="@+id/bt_7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="7"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Input"
        app:layout_constraintVertical_bias="0.135" />

    <Button

        android:id="@+id/bt_8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="8"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toEndOf="@+id/bt_7"
        app:layout_constraintTop_toBottomOf="@+id/Input"
        app:layout_constraintVertical_bias="0.135" />

    <Button
        android:id="@+id/bt_9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="9"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toEndOf="@+id/bt_8"
        app:layout_constraintTop_toBottomOf="@+id/Input"
        app:layout_constraintVertical_bias="0.135" />

    <Button
        android:id="@+id/bt_div"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="/"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.178"
        app:layout_constraintStart_toEndOf="@+id/bt_9"
        app:layout_constraintTop_toBottomOf="@+id/Input"
        app:layout_constraintVertical_bias="0.135" />

    <Button
        android:id="@+id/bt_4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="4"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_7"
        app:layout_constraintVertical_bias="0.052" />

    <Button
        android:id="@+id/bt_5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="5"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toEndOf="@+id/bt_4"
        app:layout_constraintTop_toBottomOf="@+id/bt_8"
        app:layout_constraintVertical_bias="0.052" />

    <Button
        android:id="@+id/bt_6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="6"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toEndOf="@+id/bt_5"
        app:layout_constraintTop_toBottomOf="@+id/bt_9"
        app:layout_constraintVertical_bias="0.052" />

    <Button
        android:id="@+id/bt_mul"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="*"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.178"
        app:layout_constraintStart_toEndOf="@+id/bt_6"
        app:layout_constraintTop_toBottomOf="@+id/bt_div"
        app:layout_constraintVertical_bias="0.052" />

    <Button
        android:id="@+id/bt_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="1"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_4"
        app:layout_constraintVertical_bias="0.088" />

    <Button
        android:id="@+id/bt_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="2"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toEndOf="@+id/bt_1"
        app:layout_constraintTop_toBottomOf="@+id/bt_5"
        app:layout_constraintVertical_bias="0.088" />

    <Button
        android:id="@+id/bt_3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="3"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toEndOf="@+id/bt_2"
        app:layout_constraintTop_toBottomOf="@+id/bt_6"
        app:layout_constraintVertical_bias="0.088" />

    <Button
        android:id="@+id/bt_sub"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="-"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.178"
        app:layout_constraintStart_toEndOf="@+id/bt_3"
        app:layout_constraintTop_toBottomOf="@+id/bt_mul"
        app:layout_constraintVertical_bias="0.088" />

    <Button
        android:id="@+id/bt_dot"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="."
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_1"
        app:layout_constraintVertical_bias="0.136" />

    <Button
        android:id="@+id/bt_0"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="0"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toEndOf="@+id/bt_dot"
        app:layout_constraintTop_toBottomOf="@+id/bt_2"
        app:layout_constraintVertical_bias="0.136" />

    <Button
        android:id="@+id/bt_equal"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="="
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toEndOf="@+id/bt_0"
        app:layout_constraintTop_toBottomOf="@+id/bt_3"
        app:layout_constraintVertical_bias="0.136" />

    <Button
        android:id="@+id/bt_plus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="+"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.178"
        app:layout_constraintStart_toEndOf="@+id/bt_equal"
        app:layout_constraintTop_toBottomOf="@+id/bt_sub"
        app:layout_constraintVertical_bias="0.136" />

    <Button
        android:id="@+id/bt_clear"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="C"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.803"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_plus"
        app:layout_constraintVertical_bias="0.388" />
</androidx.constraintlayout.widget.ConstraintLayout>